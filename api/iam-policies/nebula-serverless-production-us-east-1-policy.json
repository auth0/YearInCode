{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["s3:GetBucketPolicy"],
      "Resource": "arn:aws:s3:::nebula-serverless-prod*"
    },
    {
      "Effect": "Allow",
      "Action": ["ssm:GetParameters", "ssm:GetParameter"],
      "Resource": "arn:aws:ssm:us-east-1:882344634207:parameter/production*"
    },
    {
      "Effect": "Allow",
      "Action": ["ssm:DescribeParameters"],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "cloudformation:List*",
        "cloudformation:Get*",
        "cloudformation:ValidateTemplate",
        "cloudfront:UpdateDistribution",
        "cloudfront:CreateCloudFrontOriginAccessIdentity",
        "cloudfront:CreateDistribution",
        "cloudfront:TagResource",
        "cloudfront:GetDistribution",
        "cloudfront:GetDistributionConfig",
        "cloudfront:GetCloudFrontOriginAccessIdentity"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": ["lambda:PublishLayerVersion"],
      "Resource": ["arn:aws:lambda:*:*:layer:production-*"]
    },
    {
      "Effect": "Allow",
      "Action": ["acm:ListCertificates"],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "route53:ListHostedZones",
        "route53:GetHostedZone",
        "route53:ListResourceRecordSets"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": ["route53:ChangeResourceRecordSets"],
      "Resource": ["arn:aws:route53:::hostedzone/Z09161531LIWUC14MU29K"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "cloudformation:CreateStack",
        "cloudformation:CreateUploadBucket",
        "cloudformation:DeleteStack",
        "cloudformation:Describe*",
        "cloudformation:UpdateStack"
      ],
      "Resource": [
        "arn:aws:cloudformation:us-east-1:*:stack/nebula-serverless-production/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "lambda:Get*",
        "lambda:List*",
        "lambda:CreateFunction",
        "lambda:CreateEventSourceMapping"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:CreateBucket",
        "s3:DeleteBucket",
        "s3:ListBucket",
        "s3:ListBucketVersions",
        "s3:PutAccelerateConfiguration",
        "s3:GetEncryptionConfiguration",
        "s3:PutEncryptionConfiguration"
      ],
      "Resource": ["arn:aws:s3:::nebula-serverless*serverlessdeploy*"]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject", "s3:DeleteObject"],
      "Resource": ["arn:aws:s3:::nebula-serverless*serverlessdeploy*"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "lambda:AddPermission",
        "lambda:CreateAlias",
        "lambda:DeleteFunction",
        "lambda:InvokeFunction",
        "lambda:PublishVersion",
        "lambda:RemovePermission",
        "lambda:Update*",
        "lambda:PutFunctionConcurrency"
      ],
      "Resource": [
        "arn:aws:lambda:us-east-1:*:function:nebula-serverless-production-*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "apigateway:GET",
        "apigateway:POST",
        "apigateway:PUT",
        "apigateway:DELETE",
        "apigateway:PATCH"
      ],
      "Resource": [
        "arn:aws:apigateway:*::/restapis*",
        "arn:aws:apigateway:*::/apikeys*",
        "arn:aws:apigateway:*::/usageplans*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["apigateway:POST"],
      "Resource": ["arn:aws:apigateway:*::/apis*"]
    },
    {
      "Effect": "Allow",
      "Action": ["apigateway:GET"],
      "Resource": [
        "arn:aws:apigateway:*::/domainnames/*",
        "arn:aws:apigateway:*::/domainnames/*/basepathmappings"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["apigateway:DELETE"],
      "Resource": ["arn:aws:apigateway:*::/domainnames/*"]
    },
    {
      "Effect": "Allow",
      "Action": ["apigateway:POST"],
      "Resource": [
        "arn:aws:apigateway:*::/domainnames",
        "arn:aws:apigateway:*::/domainnames/*/basepathmappings",
        "arn:aws:apigateway:*::/domainnames/*/apimappings*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["apigateway:PATCH"],
      "Resource": [
        "arn:aws:apigateway:*::/domainnames/*/basepathmapping",
        "arn:aws:apigateway:*::/domainnames/*/apimappings*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iam:PassRole"],
      "Resource": ["arn:aws:iam::*:role/*"]
    },
    {
      "Effect": "Allow",
      "Action": "kinesis:*",
      "Resource": [
        "arn:aws:kinesis:*:*:stream/nebula-serverless-production-us-east-1"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:GetRole",
        "iam:CreateRole",
        "iam:PutRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:DeleteRole"
      ],
      "Resource": [
        "arn:aws:iam::*:role/nebula-serverless-production-us-east-1-lambdaRole"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["iam:CreateServiceLinkedRole"],
      "Resource": [
        "arn:aws:iam::*:role/aws-service-role/ops.apigateway.amazonaws.com/AWSServiceRoleForAPIGateway"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "sqs:*",
      "Resource": ["arn:aws:sqs:*:*:sqs-poster-queue-production"]
    },
    {
      "Effect": "Allow",
      "Action": ["cloudwatch:GetMetricStatistics"],
      "Resource": ["*"]
    },
    {
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:DeleteLogGroup"
      ],
      "Resource": ["arn:aws:logs:us-east-1:*:*"],
      "Effect": "Allow"
    },
    {
      "Action": ["logs:PutLogEvents"],
      "Resource": ["arn:aws:logs:us-east-1:*:*"],
      "Effect": "Allow"
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:DescribeLogStreams",
        "logs:DescribeLogGroups",
        "logs:FilterLogEvents"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": ["events:Put*", "events:Remove*", "events:Delete*"],
      "Resource": [
        "arn:aws:events:*:*:rule/nebula-serverless-production-us-east-1"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["events:DescribeRule"],
      "Resource": [
        "arn:aws:events:us-east-1:*:rule/nebula-serverless-production-*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["dynamodb:*"],
      "Resource": ["arn:aws:dynamodb:*:*:table/*"]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:CreateBucket", "s3:PutBucketCORS", "s3:PutBucketPolicy"],
      "Resource": ["arn:aws:s3:::*"]
    }
  ]
}
